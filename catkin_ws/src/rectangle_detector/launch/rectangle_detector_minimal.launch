<?xml version="1.0"?>
<launch>

    <node name="rectangle_detector" pkg="rectangle_detector" type="rectangle_detector_node"  output="screen">

        <param name="image_topic" value="/xtion/rgb/image_rect_color" />
        <param name="intersections_detector_mode" value="0" />

        <param name="elongation_factor" value="1.1" />
        <param name="rects_min_area_factor" value="0.0001" />
        <param name="rects_max_area_factor" value="0.3" />
        <param name="nms_threshold" value="1" />
        <param name="lineImg_drawing_width" value="2" />
        <param name="rectImg_drawing_width" value="1" />
        <param name="whiteness_threshold" value="0.8" />

        <param name="draw_intersections" value="true" />
        <param name="draw_graph" value="true" />
        <param name="draw_trapezoids" value="true" />

    </node>
        
